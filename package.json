{
  "name": "hades-benchmark",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --port 3400",
    "build": "vue-cli-service build",
    "start": "electron .",
    "lint": "vue-cli-service lint",
    "build:mac": "vue-cli-service build && electron-builder --mac",
    "build:linux": "vue-cli-service build && electron-builder --linux",
    "build:win": "vue-cli-service build && electron-builder --win"
  },
  "main": "main.js",
  "build": {
    "appId": "com.hades.benchmark",
    "productName": "Hades Benchmark",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    }
  },
  "dependencies": {
    "@vueuse/core": "^13.3.0",
    "axios": "^1.9.0",
    "chart.js": "^4.4.9",
    "core-js": "^3.8.3",
    "vue": "^3.2.13",
    "vue-chartjs": "^5.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
